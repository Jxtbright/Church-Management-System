        font-weight: 600;
        font-size: 1rem;
      }

      .detailed-table tbody tr:nth-child(even) {
        background-color: #f8f9fa;
      }

      .detailed-table tbody tr:hover {
        background-color: #edf2f7;
      }

      @media (max-width: 768px) {
        .stat-value {
          font-size: 2rem;
        }

        /* Responsive table adjustments */
        .detailed-table th,
        .detailed-table td {
