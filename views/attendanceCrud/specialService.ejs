<% layout('layouts/boilerplate') -%>

  <%- include('../layouts/partials/navbar') %>

      <%- include('../layouts/partials/flash') %>

    <main class="app-main">
      <div class="app-content">
        <div class="bg-light d-flex justify-content-center align-items-center min-vh-100">
          <div class="container">
            <div class="card shadow-lg mx-auto rounded-4" style="max-width: 600px; border-radius: 20px;">
              <div class="card-body p-4 p-lg-5">
                <div class="text-center mb-4">
                  <h1 class="h2 text-primary mb-0">Special Service Attendance</h1>
                </div>

                <form action="/attendance/saveSpecialService" method="POST">

                  <div class="mb-4">
                    <%if(req.session.status==='manager' || req.session.status==='grouppastor' ||
                      req.session.status==='groupadmin' ){%>
                      <div class="">
                        <label for="category" class="form-label fw-medium">Select Church</label>
                        <select class="form-select form-select-lg  rounded-3" id="churchSelect" name="churchId" required>
                          <option value=""></option>
                              <%for(church of churches){%>
                                <option value="<%=church._id%>">
                                  <%=church.churchname%>
                                </option>
                                <%}%>
                        </select>
                      </div>
                      <%}%>
                  </div>

                  <div class="mb-4">
                    <label class="form-label fw-medium">Choose service Category</label>
                    <select class="form-select form-select-lg  rounded-3" id="category" name="category" required>
                      <option value=""></option>
                      <option value="Home Caring Fellowship">Home Caring Fellowship</option>
                      <option value="GCK">GCK</option>
                      <option value="Seminar">Seminar</option>
                    </select>
                  </div>

                  <div class="mb-4">
                    <label for="date" class="form-label fw-medium">Date</label>
                    <input type="date" class="form-control" id="date" name="date" required />
                  </div>

                  <div class="mb-4">
                    <label for="males" class="form-label fw-medium">Number of Adults</label>
                    <input type="number" class="form-control" id="males" name="adults" required />
                  </div>

                  <div class="mb-4">
                    <label for="females" class="form-label fw-medium">Number of Youths</label>
                    <input type="number" class="form-control" id="females" name="youths" required />
                  </div>

                  <div class="mb-4">
                    <label for="females" class="form-label fw-medium">Number of Children</label>
                    <input type="number" class="form-control" id="females" name="children" required />
                  </div>
                  

                  <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold rounded-3">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('../layouts/partials/footer') %>