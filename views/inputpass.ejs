<% layout('layouts/loginboilerplate') -%>
    <div class="bg-light">
        <div class="">
            <div class="d-flex">
                <div class="col-12 col-lg-6">
                    <div class="text-center">
                        <img src="images/logo3b.png" class="img-fluid w-75" alt="...">
                    </div>
                    <div class=" row d-md-flex mx-5 offset-3">
                        <form action="/newpassword" method="POST">
                            <div class="mb-3 d-grid gap-2 col-md-6 mx-auto">
                                <label class=" form-label" for="New password">Password:</label>
                                <input class="form-control" type="password" name="password" id="password"
                                    placeholder="Enter Password">
                            </div>
                            <div class="mb-3 d-grid gap-2 col-md-6 mx-auto">
                                <label class=" form-label" for="confirm">Confirm Password:</label>
                                <input class="form-control" type="password" name="confirm" id="confirm"
                                    placeholder="Confirm Password">
                            </div>
                            <div class="mb-3 d-grid gap-2 col-md-6 mx-auto" text-center>
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>


                <div id="carouselExampleControls" class="d-none d-lg-block col-lg carousel slide"
                    data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div style="width: auto;" class="carousel-item active">
                            <img src="images/picture5.jpg" class="w-100 " alt="...">
                        </div>
                        <div style="width: auto;" class="carousel-item">
                            <img src="images/picture.jpg" class="w-100 " alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>