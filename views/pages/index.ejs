      <script>
        const monthLabels = <%- labels %>;
        const adultData = <%- adults %>;
        const youthData = <%- youths %>;
        const childrenData = <%- children %>;

        const sales_chart2_options = {
          series: [
            {
              name: 'ADULTS',
              data: adultData,
            },
            {
              name: 'YOUTHS',
              data: youthData,
            },
            {
              name: 'CHILDREN',
              data: childrenData,
            },
          ],
          chart: {
            height: 500,
            type: 'area',
            toolbar: {
              show: false,
            },
          },
          legend: {
            show: false,
          },
          colors: ['#0d6efd', '#20c997', '#FFD700'],
          dataLabels: {
            enabled: false,
          },
          stroke: {
            curve: 'smooth',
          },
          xaxis: {
            categories: monthLabels,
          },
          fill: {
            opacity: 1,
          },
          tooltip: {
            y: {
              formatter: function (val) {
                return val;
              },
            },
          },
        };

        const sales_chart2 = new ApexCharts(
          document.querySelector('#revenue-chart2'),
          sales_chart2_options,
        );
        sales_chart2.render();
      </script>
    </main>

